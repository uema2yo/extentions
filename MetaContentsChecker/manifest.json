{
    "manifest_version": 2,
    "name": "Meta Contents Checker",
    "author": "Yoshinori Uematsu",
    "description": "HTML 内の title と meta コンテンツを可視化する機能拡張です。",
    "version": "1.1",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*" ],
        "js": ["js/content.js"]
    }],
    "browser_action": {
        "default_title": "",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
